{
  "autotuning": {
    "enabled": false,
    "mode": "run",
    "trial_duration": 4,
    "trial_interval": 2
  },
  "distributed_training": {
    "world_size": 2
  },
  "gradient_accumulation_steps": 2,
  "train_micro_batch_size_per_gpu": 2,
  "train_batch_size": 4,
  "steps_per_print": 50,
  "pipeline": {
    "enabled": true,
    "partition": "type:transformer",
    "seed_layers": true,
    "activation_checkpoint_interval": 1,
    "activation_checkpoint_func": "deepspeed.checkpointing.checkpoint",
    "micro_batch_size": 2,
    "pipeline_parallel_size": 2,
  },
  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": 0.0000005,
      "betas": [
        0.8,
        0.999
      ],
      "eps": 1e-8,
      "weight_decay": 5e-9
    }
  },
  "fp16": {
    "enabled": true,
    "auto_cast": false,
    "type": "torch"
  },
  "zero_optimization": {
    "stage": 1
  },
  "gradient_clipping": 1.0,
  "prescale_gradients": false,
  "wall_clock_breakdown": false,
  "wandb": {
    "enabled": true,
    "group": "sfsuml",
    "team": "sfsuml",
    "project": "nairr"
  }
}
